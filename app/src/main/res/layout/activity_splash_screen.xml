<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".splash_screen">

    <LinearLayout
        android:id="@+id/img_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/live" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news"
            android:layout_marginStart="@dimen/l_6"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/google_sans_bold" />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/ly_50"
        android:layout_height="@dimen/ly_50"
        android:layout_above="@id/wait"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ly_50" />

    <TextView
        android:id="@+id/wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ly_50"
        android:layout_marginTop="@dimen/l_6"
        android:fontFamily="@font/google_sans_bold"
        android:text="@string/please_wait"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</RelativeLayout>